<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Khi nhấn -->
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#005BBB" /> <!-- Màu khi nhấn -->
                <corners android:radius="16dp" /> <!-- Bo góc -->
            </shape>
        </item>

        <!-- Trạng thái bình thường -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/blue" /> <!-- Màu bình thường -->
                <corners android:radius="100dp" /> <!-- Bo góc -->
            </shape>
        </item>
</selector>